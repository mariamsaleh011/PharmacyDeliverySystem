@model PharmacyDeliverySystem.ViewModels.CustomerLoginViewModel

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="login-card bg-body shadow rounded-4 p-4 p-md-5" style="max-width: 500px; width: 100%;">
        <h2 class="mb-4 text-center">Login</h2>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <form asp-action="Login" method="post">
            @Html.AntiForgeryToken()

            <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />

            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 mb-3">
                Login
            </button>
        </form>

        <div class="text-center text-muted mb-2">
            Don't have an account?
        </div>

        <div class="d-flex justify-content-center gap-2">
            <a asp-controller="CustomerAuth" asp-action="Register"
               class="btn btn-outline-secondary btn-sm px-3">
                Sign up as Customer
            </a>
            <a asp-controller="PharmacyAuth" asp-action="Register"
               class="btn btn-outline-primary btn-sm px-3">
                Sign up as Pharmacy
            </a>
        </div>
    </div>
</div>
