@model PharmacyDeliverySystem.Models.Refund

@{
    ViewData["Title"] = "Refund Details";
    Layout = "_Layout";
}

<h2>Refund Details</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Refund Id</dt>
            <dd class="col-sm-9">@Model.RefId</dd>

            <dt class="col-sm-3">Payment Id</dt>
            <dd class="col-sm-9">@Model.PayId</dd>

            <dt class="col-sm-3">Amount</dt>
            <dd class="col-sm-9">@Model.Amount</dd>

            <dt class="col-sm-3">Reason</dt>
            <dd class="col-sm-9">@Model.Reason</dd>
        </dl>
    </div>
</div>

<p class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.RefId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
