@model PharmacyDeliverySystem.ViewModels.DeliveryRun.DeliveryRunViewModels.CreateDeliveryRunViewModel
@using PharmacyDeliverySystem.Models

@{
    ViewData["Title"] = "Create Delivery Run";
    var orders = ViewBag.PendingOrders as IEnumerable<Order>;
}

<h2 class="mb-4">Create New Delivery Run</h2>

<form asp-action="Create" method="post">

    <div class="form-group mb-3">
        <label>Rider ID</label>
        <input asp-for="RiderId" class="form-control" />
        <span asp-validation-for="RiderId" class="text-danger"></span>
    </div>

    <h4 class="mt-4">Pending Orders</h4>

    @if (orders == null || !orders.Any())
    {
        <p class="text-danger">No pending orders available.</p>
    }
    else
    {
        <table class="table table-bordered table-striped mt-3">
            <thead>
                <tr>
                    <th>Select</th>
                    <th>Order ID</th>
                    <th>Customer ID</th>
                    <th>Total Price</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in orders)
                {
                    <tr>
                        <td>
                            <!-- IMPORTANT: return list correctly -->
                            <input type="checkbox"
                                   name="OrderIds"
                                   value="@order.OrderId" />
                        </td>
                        <td>@order.OrderId</td>
                        <td>@order.CustomerId</td>
                        <td>@(order.TotalPrice?.ToString("0.00") ?? "0.00")</td>
                        <td>@order.Status</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <span asp-validation-for="OrderIds" class="text-danger"></span>

    <button type="submit" class="btn btn-primary mt-3">
        Create Delivery Run
    </button>

    <a asp-action="Index" class="btn btn-secondary mt-3">Back</a>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
