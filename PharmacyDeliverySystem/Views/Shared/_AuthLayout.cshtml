@{
    Layout = null;
    var title = ViewData["Title"] ?? "PharmacyMarts";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title - PharmacyDeliverySystem</title>

    <!-- Bootstrap + الستايل العام (فيه الثيم والـ variables) -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- ستايل صفحات الأوث -->
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
</head>

<body>
    <!-- الكارت في نص الصفحة -->
    <div class="auth-page">
        <div class="auth-card">
            @RenderBody()
        </div>
    </div>

    <!-- Footer بسيط -->
    <footer class="auth-footer text-center mt-3 mb-2">
        <small>© 2025 PharmacyMarts – Training project only</small>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
