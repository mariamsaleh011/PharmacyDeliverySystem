@{
    ViewData["Title"] = "منتجات عناية الأطفال";
    Layout = "_Layout";

    var BabyCareProducts = ViewBag.BabyCareProducts as List<PharmacyDeliverySystem.Models.Product>;
}
<link rel="stylesheet" href="~/css/baby-care.css" asp-append-version="true" />

<section class="products">
    <h2>منتجات عناية الأطفال</h2>

    <div class="product-grid">
        @if (BabyCareProducts != null && BabyCareProducts.Any())
        {
            foreach (var product in BabyCareProducts)
            {
                <div class="product"
                     data-name="@product.Name"
                     data-price="@product.Price"
                     data-product-id="@product.ProId">
                    <img src="@product.ImageUrl" alt="@product.Name" class="product-img" />
                    <h3>@product.Name</h3>
                    <p>@((product.Description ?? product.Dosage) ?? "منتج متوفر")</p>
                    <p class="price">
                        @if (product.OldPrice.HasValue && product.OldPrice.Value > product.Price)
                        {
                            <span class="old-price">@product.OldPrice.Value.ToString("0.00 ج.م")</span>
                        }
                        @product.Price.ToString("0.00 ج.م")
                    </p>
                    <button class="btn add-to-cart" data-product-id="@product.ProId">أضف للسلة</button>
                </div>
            }
        }
        else
        {
            <p>لا توجد منتجات عناية الأطفال متاحة حالياً.</p>
        }
    </div>
</section>
