@{
    ViewData["Title"] = "عناية الأطفال";
    Layout = "_Layout";
}

@section Head {
    <link rel="stylesheet" href="~/css/baby-care.css" asp-append-version="true" />
}

<section class="products">
    <h2 data-lang-key="babycare_title">منتجات عناية الأطفال</h2>

    <div class="product-grid">

        <div class="product" data-name="Johnson's Baby Soft Lotion" data-price="75">
            <img src="~/images/baby-care/johnsons_baby_soft_lotion.jpg"
                 alt="Johnson's Baby Lotion" class="product-img" />
            <h3 data-lang-key="baby_johnsons_lotion_title">Johnson's Baby Soft Lotion</h3>
            <p data-lang-key="baby_johnsons_lotion_desc">ترطيب لطيف ومناسب لبشرة الأطفال الحساسة.</p>
            <p class="price" data-lang-key="baby_johnsons_lotion_price">السعر: 75 جنيه</p>
            <button class="btn add-to-cart" data-lang-key="btn_add_to_cart">أضف للسلة</button>
        </div>

        <div class="product" data-name="Prima Baby Diapers" data-price="190">
            <img src="~/images/baby-care/prima_baby_diapers.jpg"
                 alt="Prima Baby Diapers" class="product-img" />
            <h3 data-lang-key="baby_prima_diapers_title">Prima Baby Diapers</h3>
            <p data-lang-key="baby_prima_diapers_desc">حفاضات عالية الامتصاص لبشرة الطفل الحساسة.</p>
            <p class="price" data-lang-key="baby_prima_diapers_price">السعر: 190 جنيه</p>
            <button class="btn add-to-cart" data-lang-key="btn_add_to_cart">أضف للسلة</button>
        </div>

        <div class="product" data-name="Sebamed Baby Lotion" data-price="140">
            <img src="~/images/baby-care/sebamed_baby_lotion.jpg"
                 alt="Sebamed Baby Lotion" class="product-img" />
            <h3 data-lang-key="baby_sebamed_lotion_title">Sebamed Baby Lotion</h3>
            <p data-lang-key="baby_sebamed_lotion_desc">مرطب لطيف وخالي من المواد الضارة.</p>
            <p class="price" data-lang-key="baby_sebamed_lotion_price">السعر: 140 جنيه</p>
            <button class="btn add-to-cart" data-lang-key="btn_add_to_cart">أضف للسلة</button>
        </div>

        <div class="product" data-name="Sudocrem" data-price="115">
            <img src="~/images/baby-care/sudocrem_healing_cream.jpg"
                 alt="Sudocrem" class="product-img" />
            <h3 data-lang-key="baby_sudocrem_title">Sudocrem</h3>
            <p data-lang-key="baby_sudocrem_desc">علاج فعّال لالتهابات الحفاضات وتهيّجات البشرة.</p>
            <p class="price" data-lang-key="baby_sudocrem_price">السعر: 115 جنيه</p>
            <button class="btn add-to-cart" data-lang-key="btn_add_to_cart">أضف للسلة</button>
        </div>

        <div class="product" data-name="Mustela Baby Oil" data-price="160">
            <img src="~/images/baby-care/mustela_baby_oil.jpg"
                 alt="Mustela Baby Oil" class="product-img" />
            <h3 data-lang-key="baby_mustela_oil_title">Mustela Baby Oil</h3>
            <p data-lang-key="baby_mustela_oil_desc">زيت طبيعي للعناية ببشرة الأطفال.</p>
            <p class="price" data-lang-key="baby_mustela_oil_price">السعر: 160 جنيه</p>
            <button class="btn add-to-cart" data-lang-key="btn_add_to_cart">أضف للسلة</button>
        </div>

        <div class="product" data-name="Chicco Baby Toothbrush" data-price="60">
            <img src="~/images/baby-care/chicco_baby_toothbrush.jpg"
                 alt="Chicco Baby Toothbrush" class="product-img" />
            <h3 data-lang-key="baby_chicco_brush_title">Chicco Baby Toothbrush</h3>
            <p data-lang-key="baby_chicco_brush_desc">فرشاة أسنان آمنة ومناسبة للأطفال.</p>
            <p class="price" data-lang-key="baby_chicco_brush_price">السعر: 60 جنيه</p>
            <button class="btn add-to-cart" data-lang-key="btn_add_to_cart">أضف للسلة</button>
        </div>

    </div>
</section>

@section Scripts {
    @* مافيش جافاسكريبت محلي – السلة والثيم واللغة من site.js *@
}
