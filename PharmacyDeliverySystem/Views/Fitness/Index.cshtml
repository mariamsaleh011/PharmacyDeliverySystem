@using PharmacyDeliverySystem.Models
@{
    ViewData["Title"] = "Fitness & Nutrition";
    Layout = "_Layout";

    var fitnessProducts = ViewBag.FitnessProducts as List<Product>;
    var total = fitnessProducts?.Count ?? 0;
}

<link rel="stylesheet" href="~/css/category.css" asp-append-version="true" />

<section class="products products-en">
    <div class="products-header">
        <div class="products-header-left">
            <div class="products-header-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="2" y="9" width="4" height="6" rx="1"></rect>
                    <rect x="18" y="9" width="4" height="6" rx="1"></rect>
                    <rect x="7" y="7" width="10" height="10" rx="2"></rect>
                </svg>
            </div>
            <div>
                <h2 class="products-title-en">Fitness & Nutrition</h2>
                <p class="products-subtitle-en">
                    <span class="category-count">@total items</span> available
                </p>
            </div>
        </div>

        <div class="category-search">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="11" cy="11" r="8"></circle>
                <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
            </svg>
            <input type="search"
                   class="category-search-input"
                   placeholder="Search @total items..." />
        </div>
    </div>

    <div class="product-grid">
        @if (fitnessProducts != null && fitnessProducts.Any())
        {
            foreach (var product in fitnessProducts)
            {
                <div class="product"
                     data-name="@product.Name"
                     data-price="@product.Price"
                     data-product-id="@product.ProId">
                    <img src="@product.ImageUrl" alt="@product.Name" class="product-img" />
                    <h3>@product.Name</h3>
                    <p>@((product.Description ?? product.Dosage) ?? "Available product")</p>
                    <p class="price">
                        @if (product.OldPrice.HasValue && product.OldPrice.Value > product.Price)
                        {
                            <span class="old-price">@product.OldPrice.Value.ToString("0.00 EGP")</span>
                        }
                        @product.Price.ToString("0.00 EGP")
                    </p>
                    <button class="btn add-to-cart" data-product-id="@product.ProId">
                        Add to cart
                    </button>
                </div>
            }
        }
        else
        {
            <p>No fitness & nutrition products available right now.</p>
        }
    </div>
</section>
