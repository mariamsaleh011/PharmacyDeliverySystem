@* @model IEnumerable<PharmacyDeliverySystem.Models.Chat>

@{
    ViewData["Title"] = "Chats";
}

<link rel="stylesheet" href="~/css/chat.css" asp-append-version="true" />

<div class="chat-container">
    <div class="chat-list">
        <h2>المحادثات</h2>
        @if (Model != null && Model.Any())
        {
            foreach (var chat in Model)
            {
                var lastMessage = chat.ChatMessages.OrderByDescending(m => m.SentAt).FirstOrDefault();
                <a href="@Url.Action("Chat", "PharmacyChat", new { id = chat.ChatId })" class="chat-card">
                    <div class="chat-card-info">
                        <strong>@chat.Customer?.Name</strong>
                        <p class="last-message">
                            @if(lastMessage != null)
                            {
                                @((lastMessage.MessageText.Length > 30) ? lastMessage.MessageText.Substring(0,30) + "..." : lastMessage.MessageText)
                            }
                        </p>
                    </div>
                    <div class="chat-time">
                        @if(lastMessage != null)
                        {
                            @lastMessage.SentAt.ToString("HH:mm dd/MM")
                        }
                    </div>
                </a>
            }
        }
        else
        {
            <p>لا توجد محادثات حالياً.</p>
        }
