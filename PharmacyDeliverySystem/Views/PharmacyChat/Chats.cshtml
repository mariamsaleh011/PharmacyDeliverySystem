@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "محادثات العملاء";
    Layout = "_Layout";
}

<h2>محادثات العملاء</h2>

<div class="chat-list-container">
    @if (Model != null && Model.Any())
    {
        foreach (var chat in Model)
        {
            <a href="@Url.Action("Chat", "PharmacyChat", new { id = chat.ChatId })" 
               class="chat-item">
                <div class="chat-avatar">👤</div>
                <div class="chat-info">
                    <div class="chat-header">
                        <strong class="chat-customer">@chat.CustomerName</strong>
                        @if(chat.LastMessageTime != null)
                        {
                            <small class="chat-time">@chat.LastMessageTime?.ToString("yyyy-MM-dd HH:mm")</small>
                        }
                    </div>
                    <p class="chat-preview">@chat.LastMessage</p>
                </div>
            </a>
        }
    }
    else
    {
        <p class="no-chats">لا توجد محادثات حتى الآن</p>
    }
</div>

<style>
.chat-list-container {
    max-width: 700px;
    margin: 20px auto;
    border: 1px solid #ddd;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 3px 7px rgba(0,0,0,0.1);
    background-color: #fff;
}

.chat-item {
    display: flex;
    align-items: center;
    padding: 14px 18px;
    border-bottom: 1px solid #eee;
    text-decoration: none;
    color: #000;
    transition: background 0.2s, transform 0.1s;
}

.chat-item:last-child {
    border-bottom: none;
}

.chat-item:hover {
    background-color: #f9f9f9;
    transform: scale(1.01);
}

.chat-avatar {
    font-size: 1.8em;
    margin-right: 15px;
}

.chat-info {
    flex: 1;
}

.chat-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.chat-customer {
    font-weight: 600;
    font-size: 1.1em;
}

.chat-preview {
    margin: 5px 0 0 0;
    color: #555;
    font-size: 0.95em;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.chat-time {
    color: #999;
    font-size: 0.8em;
}

.no-chats {
    padding: 20px;
    text-align: center;
    color: #666;
    font-style: italic;
    font-size: 1em;
}
</style>
