@using PharmacyDeliverySystem.Models
@model PharmacyDeliverySystem.Models.Chat

@section Head {
    <link rel="stylesheet" href="~/css/chat.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/js/chat.js"></script>
}

@{
    var lastPrescription = ViewBag.LastPrescription as Prescription;
}

<div class="chat-page">
    <div class="chat-card">

        <!-- HEADER -->
        <header class="chat-header">
            <h1 class="chat-title">
                <span class="chat-title-main">Pharmacy</span>
                <span class="chat-title-accent">Marts</span>
            </h1>
        </header>

        <!-- BODY -->
        <div class="chat-body" id="chat-box">
            @foreach (var msg in Model.ChatMessages.OrderBy(m => m.SentAt))
            {
                var sender = msg.SenderType?.Trim() ?? "";
                var isCustomer = sender.Equals("Customer", StringComparison.OrdinalIgnoreCase);

                <div class="msg-row @(isCustomer ? "customer" : "pharmacist")">
                    <div class="msg-avatar">
                        @(isCustomer ? "👤" : "💊")
                    </div>

                    <div class="message">
                        <div class="message-text">
                            @msg.MessageText

                            @if (!string.IsNullOrEmpty(msg.MessageText)
                                                    && msg.MessageText.Contains("Prescription uploaded successfully")
                                                    && lastPrescription != null)
                            {
                                <div class="prescription-block" style="margin-top:5px;">

                                    <div style="font-weight:600; margin-bottom:4px;">
                                        🧾 Prescription Preview
                                    </div>

                                    <img src="@lastPrescription.Image"
                                         alt="Prescription"
                                         style="max-width:150px;border-radius:8px;margin-bottom:5px;" />

                                    <a href="@lastPrescription.Image" target="_blank">
                                        View full prescription 👁️
                                    </a>
                                </div>
                            }
                        </div>

                        <div class="message-time">
                            @msg.SentAt.ToString("yyyy-MM-dd HH:mm")
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- FOOTER -->
        <footer class="chat-footer">
            <form asp-action="SendMessage" method="post" enctype="multipart/form-data" class="chat-form">

                <input type="hidden" name="chatId" value="@Model.ChatId" />

                <div class="chat-attachments">
                    <label class="attach-btn" for="fileUpload">📎</label>
                    <span id="fileName" class="file-name">No file selected</span>
                    <input type="file" id="fileUpload" name="file" />
                </div>

                <div class="chat-input-row">
                    <input type="text" id="messageInput" name="message"
                           placeholder="Type a message..." autocomplete="off" />
                    <button type="submit">Send</button>
                </div>

            </form>
        </footer>

    </div>
</div>
